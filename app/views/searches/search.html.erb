<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>Users search for "<% @users %>"</h2>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  　<tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to(user) do %>
            <%= image_tag user.get_profile_image, size: '50x50' %>
            <% end %>
          </td>
          <td>
            <%= link_to(user) do %>
            <%= user.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <h2>Books search for "<% @books %>" </h2>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
  　</thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size: '50x50' %>
            <% end %>
          </td>
          <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
